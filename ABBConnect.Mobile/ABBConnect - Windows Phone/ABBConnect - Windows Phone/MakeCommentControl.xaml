<UserControl x:Class="ABBConnect___Windows_Phone.MakeCommentControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="200" d:DesignWidth="456">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <TextBlock x:Name="lblComment" Height="30" HorizontalAlignment="Left" Margin="182,10,0,0"  Text="Comment" VerticalAlignment="Top" />
        <TextBox x:Name="txtbText"  HorizontalAlignment="Left" Height="110" Margin="10,32,0,0" TextWrapping="Wrap" Text="Enter comment..." VerticalAlignment="Top" Width="436"/>
        <Button x:Name="btnPublishComment" Content="Publish" HorizontalAlignment="Left" Margin="10,129,0,0" VerticalAlignment="Top" Height="71" Width="436" BorderThickness="10,3" Background="Black" Click="btnPublishComment_Click"/>

    </Grid>
</UserControl>